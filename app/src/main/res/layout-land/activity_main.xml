<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.sparshgupta.coursesretrofit.MainActivity">

    <FrameLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginRight="2dp"
    android:layout_height="match_parent">
        <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentUsersView"
        android:name="com.example.sparshgupta.coursesretrofit.UsersFragment">
        </fragment>
    </FrameLayout>


    <fragment
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_height="match_parent"
        android:id="@+id/postsFragment"
        android:name="com.example.sparshgupta.coursesretrofit.PostsFragment">
    </fragment>


</LinearLayout>
